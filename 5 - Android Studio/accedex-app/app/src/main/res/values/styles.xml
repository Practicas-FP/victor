<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text">

    </style>

    <style name="Widget.Theme.Accedex.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Accedex.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="type">
        <item name="android:layout_width">116dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="type_text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="button_blue" parent="button">
        <item name="android:background">@drawable/btn_shape_blue</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="button_yellow" parent="button">
        <item name="android:background">@drawable/btn_shape_blue</item>
        <item name="backgroundTint">@color/yellow</item>
    </style>

    <style name="button_danger" parent="button">
        <item name="android:background">@drawable/btn_shape_blue</item>
        <item name="backgroundTint">@color/danger</item>
    </style>

    <style name="edit_text">
        <item name="android:minHeight">48dp</item>
    </style>
</resources>